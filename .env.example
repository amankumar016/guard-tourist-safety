# App
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/guardvista?schema=public

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# JWT
JWT_ACCESS_SECRET=replace-with-strong-secret
JWT_REFRESH_SECRET=replace-with-strong-refresh-secret
JWT_ACCESS_TTL=900s
JWT_REFRESH_TTL=30d

# S3/MinIO
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio12345
S3_BUCKET=guardvista
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# Email/SMS/Push (fill in if using live providers)
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
FCM_SERVICE_ACCOUNT_JSON_BASE64=

# Blockchain anchoring (optional)
BLOCKCHAIN_ENDPOINT=
BLOCKCHAIN_API_KEY=

# UI Settings
UI_AUTOSCROLL_LONG_CONTENT_MS_PER_1000_CHARS=800
